<Window x:Class="TR.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TR"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Width="800"
        Height="500"
        Title="ТН">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="500"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.Column="1" x:Name="horrizontalMenu">
            <MenuItem>
                <MenuItem.Header>
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="AccountMultiple" Margin="0 0 5 0" Width="20" Height="20" Grid.Column="0"/>
                        <TextBlock Text="Пользователи" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem>
                <MenuItem.Header>
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="MessageText"  Width="20" Height="20" Margin=" 0 0 5 0 " Grid.Column="0"/>
                        <TextBlock Text="Заявки" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem>
                <MenuItem.Header>
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Email" Width="20" Height="20" Margin="0 0 5 0" Grid.Column="0"/>
                        <TextBlock Text="Отправить сообщение" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem>
                <MenuItem.Header>
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="History" Width="20" Height="20"  Margin=" 0 0 5 0 " Grid.Column="0"/>
                        <TextBlock Text="История" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Visibility="Collapsed">
                <MenuItem.Header>
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="FileSend" Width="20" Height="20" Margin="0 0 5 0" Grid.Column="0"/>
                        <TextBlock Text="Отправить заявку" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem>
                <MenuItem.Header>
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Bell" Width="20" Height="20" Grid.Column="0"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
